<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:minWidth="464dip"
	android:orientation="vertical"
	style="@style/FishnStore">
	<LinearLayout
		android:gravity="center"
		android:id="@+id/save_current_location_fragment_linearlayout_header"
		android:layout_height="wrap_content"
		android:layout_marginBottom="32dip"
		android:layout_width="match_parent"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/save_current_location_fragment_linearlayout_header_textview"
			android:layout_height="wrap_content"
			android:layout_width="0dip"
			android:text="@string/searching_for_location"
			android:textSize="24sp"
			android:layout_weight="1" />
		<ProgressBar
			android:id="@+id/save_current_location_fragment_linearlayout_header_progressbar"
			android:indeterminate="true"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" />
		<Button
			android:id="@+id/save_current_location_fragment_linearlayout_header_button"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="@string/refresh"
			android:visibility="gone" />
	</LinearLayout>
	<LinearLayout
		android:baselineAligned="false"
		android:layout_height="wrap_content"
		android:layout_marginBottom="20dip"
		android:layout_width="match_parent"
		android:orientation="horizontal">
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_width="0dip"
			android:orientation="vertical"
			android:paddingRight="2dip">
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:text="@string/name"
				android:textSize="20sp" />
			<EditText
				android:id="@+id/save_current_location_fragment_edittext_name"
				android:inputType="textCapWords"
				android:layout_height="wrap_content"
				android:layout_marginBottom="16dip"
				android:layout_width="match_parent"
				android:maxLength="255" />
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:text="@string/latitude"
				android:textSize="20sp" />
			<EditText
				android:enabled="false"
				android:hint="@string/loading"
				android:id="@+id/save_current_location_fragment_edittext_latitude"
				android:inputType="numberDecimal"
				android:layout_height="wrap_content"
				android:layout_marginBottom="16dip"
				android:layout_width="match_parent"
				android:maxLength="255"
				android:typeface="monospace" />
		</LinearLayout>
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_width="0dip"
			android:orientation="vertical"
			android:paddingRight="2dip">
			<TextView
				android:gravity="right"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:text="@string/altitude"
				android:textSize="20sp" />
			<EditText
				android:enabled="false"
				android:gravity="right"
				android:hint="@string/loading"
				android:id="@+id/save_current_location_fragment_edittext_altitude"
				android:inputType="numberDecimal"
				android:layout_height="wrap_content"
				android:layout_marginBottom="16dip"
				android:layout_width="match_parent"
				android:maxLength="255"
				android:typeface="monospace" />
			<TextView
				android:gravity="right"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:text="@string/longitude"
				android:textSize="20sp" />
			<EditText
				android:enabled="false"
				android:gravity="right"
				android:hint="@string/loading"
				android:id="@+id/save_current_location_fragment_edittext_longitude"
				android:inputType="numberDecimal"
				android:layout_height="wrap_content"
				android:layout_marginBottom="24dip"
				android:layout_width="match_parent"
				android:maxLength="255"
				android:typeface="monospace" />
		</LinearLayout>
	</LinearLayout>
	<Button
		android:enabled="false"
		android:id="@+id/save_current_location_fragment_button_save_current_location"
		android:layout_gravity="center"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="@string/save_this_location" />
</LinearLayout>