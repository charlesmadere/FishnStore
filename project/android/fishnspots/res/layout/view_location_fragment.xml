<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	style="@style/FishnStore">
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical">
		<com.google.android.gms.maps.MapView
			android:id="@+id/view_location_fragment_map_view"
			android:layout_height="224dip"
			android:layout_marginBottom="12dip"
			android:layout_width="match_parent" />
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="@string/name"
			android:textSize="20sp" />
		<TextView
			android:id="@+id/view_location_fragment_textview_name"
			android:layout_height="wrap_content"
			android:layout_marginBottom="12dip"
			android:layout_width="match_parent"
			android:paddingLeft="2dip"
			android:textIsSelectable="true" />
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="@string/altitude"
			android:textSize="20sp" />
		<TextView
			android:id="@+id/view_location_fragment_textview_altitude"
			android:layout_height="wrap_content"
			android:layout_marginBottom="12dip"
			android:layout_width="match_parent"
			android:paddingLeft="2dip"
			android:textIsSelectable="true"
			android:typeface="monospace" />
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="@string/latitude"
			android:textSize="20sp" />
		<TextView
			android:id="@+id/view_location_fragment_textview_latitude"
			android:layout_height="wrap_content"
			android:layout_marginBottom="12dip"
			android:layout_width="match_parent"
			android:paddingLeft="2dip"
			android:textIsSelectable="true"
			android:typeface="monospace" />
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="@string/longitude"
			android:textSize="20sp" />
		<TextView
			android:id="@+id/view_location_fragment_textview_longitude"
			android:layout_height="wrap_content"
			android:layout_marginBottom="16dip"
			android:layout_width="match_parent"
			android:paddingLeft="2dip"
			android:textIsSelectable="true"
			android:typeface="monospace" />
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
		style="?android:attr/buttonBarStyle">
			<Button
				android:id="@+id/view_location_fragment_button_update_location"
				android:layout_gravity="center"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_width="0dip"
				android:text="@string/update_location"
				style="?android:attr/buttonBarButtonStyle" />
			<Button
				android:id="@+id/view_location_fragment_button_delete_location"
				android:layout_gravity="center"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_width="0dip"
				android:text="@string/delete_location"
				style="?android:attr/buttonBarButtonStyle" />
		</LinearLayout>
	</LinearLayout>
</ScrollView>